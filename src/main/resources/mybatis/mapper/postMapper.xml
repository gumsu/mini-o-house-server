<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.minihouse.repository.PostRepository">
  <insert id="save" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO posts (title, content, created_at, user_id)
    VALUES (#{title}, #{content}, now(), 1)
    <selectKey keyProperty="id" resultType="Long">
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>

  <select id="findById" resultType="com.minihouse.domain.Post">
    SELECT *
    FROM posts
    WHERE id = #{id}
  </select>

  <update id="update">
    UPDATE posts
    SET updated_at = now(),
        title      = #{title},
        content    = #{content}
    WHERE id = #{id}
  </update>

  <delete id="delete">
    DELETE FROM posts
    WHERE id = #{id}
  </delete>

  <select id="getAll" resultType="com.minihouse.domain.Post">
    SELECT *
    FROM posts
  </select>
</mapper>
